<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="button" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/main_regist_selector</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:text">login</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="button.green">
        <item name="android:background">@drawable/main_login_selector</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="button.red">
        <item name="android:background">@drawable/red_button_selector</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>
	 <style name="textview" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="textview.right" >       
        <item name="android:gravity">right</item>
       
    </style>
	<style name="textview.left" >
       
        <item name="android:gravity">left</item>
       
    </style>
    <style name="edittext" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name="table" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
       
    </style>

</resources>