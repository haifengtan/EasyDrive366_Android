<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_picture"
            android:layout_width="@dimen/pic_cell_width"
            android:layout_height="@dimen/pic_cell_height"
            android:layout_margin="10dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/m" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pic_cell_height"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_bound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/pb_exp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:minWidth="150dip"
                android:progress="75" />

            <TextView
                android:id="@+id/txt_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_margin="2dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_pay"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/daifukuan" />

        <ImageView
            android:id="@+id/btn_insurance"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/wodejifen"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/btn_task"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/renwu"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/btn_friend"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/pengyou"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

</LinearLayout>