<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/bk2" >
    <LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_weight="1.0"
    	android:layout_marginLeft="10dp"
    	android:orientation="vertical">

    	<TextView
    	    android:id="@+id/txt_violationdetailitem_title"
    	    android:layout_width="240dp"
    	    android:layout_height="match_parent"
    	    android:text="title" />

        <TextView
            android:id="@+id/txt_violationdetailitem_detail"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:lines="3"
            android:minLines="3"
            android:text="detail" />
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_weight="0.0"
    	android:layout_marginRight="10dp"
    	android:orientation="vertical">
        <TextView android:id="@+id/txt_violationdetailitem_r1"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:text="title"/>
        <TextView android:id="@+id/txt_violationdetailitem_r2"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:text="title"/>
        <TextView android:id="@+id/txt_violationdetailitem_r3"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:text="long time to show"/>        
    </LinearLayout>

</LinearLayout>