                <TextView
                    android:id="@+id/txt_address1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_weight="7"
                    android:gravity="right"
                    android:text="@string/placeholder" />
            </LinearLayout>
        </LinearLayout>
        <!-- contents -->

