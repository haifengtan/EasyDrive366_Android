<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/btn_home"
        style="@style/button"
        android:layout_width="0dip"
        android:layout_height="35dp"
        android:layout_margin="0dip"
        android:layout_weight="1.0"
        android:padding="0dip"
        android:text="主页"
        android:background="@drawable/zhuye"
        android:textSize="12sp" />
    
    <Button
        android:id="@+id/btn_map"
        style="@style/button"
        android:layout_width="0dip"
        android:layout_height="35dp"
        android:layout_margin="0dip"
        android:layout_weight="1.0"
        android:padding="0dip"
        android:text="地图"
        android:background="@drawable/shangpin"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_goods"
        style="@style/button"
        android:layout_width="0dip"
        android:layout_height="35dp"
        android:layout_margin="0dip"
        android:layout_weight="1.0"
        android:padding="0dip"
        android:text="商品"
        android:background="@drawable/shanghu"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_provider"
        style="@style/button"
        android:layout_width="0dip"
        android:layout_height="35dp"
        android:layout_margin="0dip"
        android:layout_weight="1.0"
        android:padding="0dip"
        android:text="商户"
        android:background="@drawable/baike"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_article"
        style="@style/button"
        android:layout_width="0dip"
        android:layout_height="35dp"
        android:layout_margin="0dip"
        android:layout_weight="1.0"
        android:padding="0dip"
        android:text="百科"
        android:background="@drawable/yonghu"
        android:textSize="12sp" />

</LinearLayout>