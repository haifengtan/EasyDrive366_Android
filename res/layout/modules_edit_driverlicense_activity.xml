<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/table"
        android:stretchColumns="*" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/navigation_bar_without_phone_button" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_hit_input1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
               style="@style/textview.right" 
                android:text="姓名：" />

            <EditText
                android:id="@+id/edt_driverlicense_name"
                style="@style/edittext"
                android:hint="" >
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.0"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_hit_input2"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview.right" 
                android:text="证件号：" />

            <EditText
                android:id="@+id/edt_driverlicense_number"
                style="@style/edittext"
                android:inputType="textCapCharacters"
                android:hint="" >
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.0"
                android:text="" />
        </TableRow>

        

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_hit_input2"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview.right" 
                android:text="准驾车型：" />

            <TextView
                android:id="@+id/edt_driverlicense_car_type"
               style="@style/textview"
                 >
            </TextView>

           
             <TextView
                android:id="@+id/txt_driverlicense_choose_driver_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                
                android:layout_marginRight="20dp"
                android:textSize="24sp"
                android:text=">" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_hit_input6"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview.right" 
                android:text="初领日期：" />

            <TextView
                android:id="@+id/edt_driverlicense_init_date"
                style="@style/textview"
                 >
            </TextView>

           
            <TextView
                android:id="@+id/txt_driverlicense_choose_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                
                android:layout_marginRight="20dp"
                android:textSize="24sp"
                android:text=">" />
        </TableRow>
    </TableLayout>

</ScrollView>