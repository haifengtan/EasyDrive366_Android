<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" >
	
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        style="@style/table"
        android:stretchColumns="*" >
	<View android:layout_width="match_parent"
		    android:layout_height="30dp"></View>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_hit_input1"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview.right"
                android:text="车牌号：" />

            <EditText
                android:id="@+id/edt_car_no"
                style="@style/edittext"  
                android:inputType="textCapCharacters">
                
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.0"
                android:text="" />
        </TableRow>
		<TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_hit_input2"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview.right"
                android:text="邀请码：" />

            <EditText
                android:id="@+id/edt_invite_code"
                style="@style/edittext"
                android:layout_weight="1.0"
                android:hint=""
                android:inputType="textNoSuggestions" >
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.0"
                android:text="" />
        </TableRow>
        
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_hit_input2"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview.right"
                android:text="手机号：" />

            <EditText
                android:id="@+id/edt_phone"
                style="@style/edittext"
                android:layout_weight="1.0"
                android:hint=""
                android:inputType="number">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.0"
                android:text="" />
        </TableRow>

        

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_hit_input6"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_ok"
                style="@style/button"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_span="3"
                android:text="@string/next" />
        </TableRow>
        
    </TableLayout>

</RelativeLayout>