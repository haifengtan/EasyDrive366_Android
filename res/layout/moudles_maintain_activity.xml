<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/navigation_bar" />

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft = "5dp"
        android:layout_marginRight = "5dp"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrMode="pullFromStart" >

        <TableLayout
            style="@style/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/signup_hit_input1"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="下次保养时间：" />

                <TextView
                    android:id="@+id/txt_maintain_current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/signup_hit_input6"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="下次保养里程：" />

                <TextView
                    android:id="@+id/txt_maintain_current_miles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="基本信息"
                android:textSize="16sp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/signup_hit_input1"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="每日平均里程：" />

                <TextView
                    android:id="@+id/txt_maintain_average_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </TableRow>

           

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/signup_hit_input2"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="最大保养里程：" />

                <TextView
                    android:id="@+id/txt_maintain_max_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/signup_hit_input2"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="最长保养间隔：" />

                <TextView
                    android:id="@+id/txt_maintain_max_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </TableRow>
             <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/signup_hit_input2"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="上次保养里程：" />

                <TextView
                    android:id="@+id/txt_maintain_pre_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/signup_hit_input6"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="上次保养日期：" />

                <TextView
                    android:id="@+id/txt_maintain_pre_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </TableRow>
        </TableLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>